---
// Component Imports
import MainHead from '../components/MainHead.astro';
import AosSetup from "../components/AosSetup.astro"
import Nav from '../components/Nav/index.jsx';
import ScrollDown from "../components/ScrollDown/index.jsx";
import Footer from '../components/Footer/index.jsx';
import Social from "../components/Social/index.jsx";
import SkillCard from "../components/SkillCard/index.jsx"

---
<html lang="en">
  <head>
    <MainHead title="A J A L" />
    
  </head>
  <body class="bg-blackish relative overflow-x-hidden w-screen min-h-screen">
      <!-- Navbar -->
  <Nav />
  <!-- End of Navbar -->
  <!-- Social Links -->
  <Social />
  <!-- End of Social Links -->
  <!-- Landing page -->
    <section id="home" class="w-screen min-h-screen bg-cover bg-center bg-no-repeat relative flex items-center justify-center z-10" style="background-image: url('/assets/landing.svg');">
      <!-- <div data-aos="fade-up" data-aos-once="false" class="absolute w-96 h-96 top-20 left-2/3 bg-cover bg-center bg-no-repeat" style="background-image: url('/assets/blob.svg');">
      </div> -->
       <section class="xl:w-2/4 md:w-2/3 h-80 flex md:p-4" >
       <div class="flex-1 flex items-start justify-start flex-col ">
       <h3 class=" font-normal text-whitish text-4xl md:text-2xl lg:text-4xl leading-relaxed tracking-widest">Hey! I'm Ajal</h3>
       <p class="font-normal text-xl md:text-lg lg:text-xl text-whitish tracking-wide leading-relaxed">I am a full-stack developer</p>
       <ScrollDown />
       </div>
       <div class="hidden md:block flex-1 bg-contain bg-top bg-no-repeat" style="background-image: url('/assets/dev.svg');">
       </div>
       </section>
    </section>
    <!-- End of Landing page -->
    <section id="skills" class="w-screen  min-h-screen bg-cover bg-center bg-no-repeat relative flex" style="background-image: url('/assets/second.svg');">
    <!-- <div  -->
    <!-- class="bg-blackish hidden md:block md:absolute top-1/2 left-0 transform -translate-y-1/2 md:w-28 md:h-60 lg:w-36 lg:h-60 rounded-r-full"></div> -->
    <div class="hidden flex-1 min-h-screen md:flex items-start justify-end ">
    <img src="/assets/skills.svg" class="w-4/5 h-4/5" />
    </div>
    <div class="flex-1 min-h-screen md:p-6 flex items-center justify-center flex-col">
    <h3 data-aos="fade-down" data-aos-duration="500" class="flex-1 h-1/5 flex items-end justify-center text-whitish font-bold text-2xl tracking-wider">Skills</h3>
    <div class=" w-5/6  md:w-4/5 xl:w-3/5 h-4/5 flex flex-col md:flex-row text-whitish pt-6">
    <div class="md:flex-1 md:p-2 p-4 md:h-4/5">
    <SkillCard  counter=1  item="ReactJs" />
    <SkillCard  counter=2  item="NextJs" />
    <SkillCard  counter=3  item="ExpressJs" />
    </div>
    <div class="md:flex-1 md:p-2 p-4 md:h-4/5">
    <SkillCard  counter=1  item="MongoDB" />
    <SkillCard  counter=2  item="Python" />
    <SkillCard  counter=3  item="Firebase" />
    </div>
    </div>
    </div>
    </section>
    <section id="projects" class="w-screen  min-h-screen  relative flex"  ></section>
    <AosSetup />
  </body>
</html>
